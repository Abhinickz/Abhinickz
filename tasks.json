// vscode perltidy build task: CTRL+SHIFT+B
// .vscode/tasks.json - In workspace
{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "pams_perltidy",
            "type": "shell",
            "command": "pams_perltidy ${file} < ~/dev_work/y",
            "problemMatcher": [],
            "presentation": {
                "reveal": "never"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}